generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  email        String @unique
  name         String
  password     String
  nutrionValue Int    @default(0)
  energyValue  Int    @default(0)
  carbonValue  Int    @default(0)
  sugarValue   Int    @default(0)
  proteinValue Int    @default(0)
  saltValue    Int    @default(0)
  foods        Food[]
}

model Food {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  time         DateTime  @default(now())
  photo        String?
  nutrionValue Int       @default(0)
  energyValue  Int       @default(0)
  carbonValue  Int       @default(0)
  sugarValue   Int       @default(0)
  proteinValue Int       @default(0)
  saltValue    Int       @default(0)
  type         TYPE_FOOD
  User         User?     @relation(fields: [userId], references: [id])
  userId       String?   @db.ObjectId
}

enum TYPE_FOOD {
  BREAKFAST
  LUNCH
  DINNER
  OTHER
}
