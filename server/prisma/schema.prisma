generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  email        String @unique
  name         String
  password     String
  nutrionValue Int    @default(0)
  energyValue  Int    @default(0)
  carbonValue  Int    @default(0)
  sugarValue   Int    @default(0)
  proteinValue Int    @default(0)
  saltValue    Int    @default(0)
}
